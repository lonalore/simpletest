<?php


/**
 * Test required plugins for tests.
 */
class SimpleTestMissingDependentPluginUnitTest extends e107UnitTestCase
{

	public static function getInfo()
	{
		return array(
			'name'         => 'Dependent plugin test',
			'description'  => 'This test should not load since it requires a plugin that is not found.',
			'group'        => 'SimpleTest',
			'dependencies' => array(
				'simpletest_missing_plugin',
			),
		);
	}

	/**
	 * Ensure that this test will not be loaded despite its dependency.
	 */
	protected function testFail()
	{
		$this->fail('Running test with missing required plugin.');
	}

}
